@model MotoBikeStore.Models.Coupon
@{ Layout="~/Views/Shared/_Layout.cshtml"; ViewData["Title"]="Xóa mã giảm giá"; }

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-danger">
        <div class="card-header bg-danger text-white">
          <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa</h5>
        </div>
        <div class="card-body">
          <div class="alert alert-warning">
            <i class="fas fa-info-circle me-2"></i>
            Bạn có chắc chắn muốn xóa mã giảm giá này không?
          </div>
          
          <div class="mb-3">
            <label class="text-muted">Mã giảm giá:</label>
            <h4><code>@Model.Code</code></h4>
          </div>
          
          <div class="mb-3">
            <label class="text-muted">Mô tả:</label>
            <p>@Model.Description</p>
          </div>
          
          <div class="row mb-3">
            <div class="col-6">
              <label class="text-muted">Giảm giá:</label>
              @if(Model.DiscountPercent > 0)
              {
                <p><strong class="text-success">@Model.DiscountPercent%</strong></p>
              }
              else if(Model.DiscountAmount.HasValue)
              {
                <p><strong class="text-success">@Model.DiscountAmount.Value.ToString("N0")₫</strong></p>
              }
            </div>
            <div class="col-6">
              <label class="text-muted">Đã sử dụng:</label>
              <p><strong>@Model.UsedCount lần</strong></p>
            </div>
          </div>
          
          @if(Model.UsedCount > 0)
          {
            <div class="alert alert-danger">
              <i class="fas fa-exclamation-circle me-2"></i>
              <strong>Cảnh báo:</strong> Mã này đã được sử dụng @Model.UsedCount lần. 
              Việc xóa có thể ảnh hưởng đến báo cáo đơn hàng.
            </div>
          }
          
          <form method="post" asp-action="Delete" asp-route-id="@Model.Id">
            @Html.AntiForgeryToken()
            
            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-danger flex-fill">
                <i class="fas fa-trash me-2"></i>Xác nhận xóa
              </button>
              <a href="/Coupons" class="btn btn-outline-secondary flex-fill">
                <i class="fas fa-times me-2"></i>Hủy
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>