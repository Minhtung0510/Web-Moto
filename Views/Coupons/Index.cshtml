@model IEnumerable<MotoBikeStore.Models.Coupon>
@{ Layout="~/Views/Shared/_Layout.cshtml"; ViewData["Title"]="Quản lý khuyến mãi"; }

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3><i class="fas fa-ticket-alt me-2"></i>Quản lý mã giảm giá</h3>
    <div>
      <a href="/Coupons/Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Tạo mã giảm giá
      </a>
      <a href="/Admin" class="btn btn-outline-secondary ms-2">
        <i class="fas fa-arrow-left me-2"></i>Về Dashboard
      </a>
    </div>
  </div>

  @if(TempData["SuccessMessage"] != null)
  {
    <div class="alert alert-success alert-dismissible">
      @TempData["SuccessMessage"]
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  }

  <div class="card">
    <div class="card-body p-0">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Mã</th>
            <th>Mô tả</th>
            <th>Giảm giá</th>
            <th>Điều kiện</th>
            <th>Thời hạn</th>
            <th>Đã dùng</th>
            <th>Trạng thái</th>
            <th class="text-center">Thao tác</th>
          </tr>
        </thead>
        <tbody>
          @foreach(var c in Model)
          {
            var isExpired = c.EndDate < DateTime.UtcNow;
            var isNotStarted = c.StartDate > DateTime.UtcNow;
            <tr class="@(isExpired ? "table-secondary" : "")">
              <td><code class="fs-6">@c.Code</code></td>
              <td>@c.Description</td>
              <td>
                @if(c.DiscountPercent > 0)
                {
                  <span class="badge bg-success">@c.DiscountPercent%</span>
                  @if(c.MaxDiscountAmount.HasValue)
                  {
                    <small>(Tối đa @c.MaxDiscountAmount.Value.ToString("N0")₫)</small>
                  }
                }
                else if(c.DiscountAmount.HasValue)
                {
                  <span class="badge bg-success">@c.DiscountAmount.Value.ToString("N0")₫</span>
                }
              </td>
              <td>
                <small>Đơn tối thiểu: @c.MinOrderAmount.ToString("N0")₫</small>
              </td>
              <td>
                <small>
                  @c.StartDate.ToString("dd/MM/yyyy")<br>
                  đến @c.EndDate.ToString("dd/MM/yyyy")
                </small>
              </td>
              <td class="text-center">
                <span class="badge bg-info">
                  @c.UsedCount @(c.UsageLimit > 0 ? "/" + c.UsageLimit : "")
                </span>
              </td>
              <td>
                @if(isExpired)
                {
                  <span class="badge bg-secondary">Hết hạn</span>
                }
                else if(isNotStarted)
                {
                  <span class="badge bg-warning">Sắp diễn ra</span>
                }
                else if(c.IsActive)
                {
                  <span class="badge bg-success">Đang hoạt động</span>
                }
                else
                {
                  <span class="badge bg-danger">Đã tắt</span>
                }
              </td>
              <td class="text-center">
                <a href="/Coupons/Edit/@c.Id" class="btn btn-sm btn-warning">
                  <i class="fas fa-edit"></i>
                </a>
                <a href="/Coupons/ToggleStatus/@c.Id" class="btn btn-sm btn-outline-primary">
                  <i class="fas fa-@(c.IsActive ? "toggle-on" : "toggle-off")"></i>
                </a>
                <a href="/Coupons/Delete/@c.Id" class="btn btn-sm btn-danger">
                  <i class="fas fa-trash"></i>
                </a>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
</div>