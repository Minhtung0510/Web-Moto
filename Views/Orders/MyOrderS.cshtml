@model IEnumerable<MotoBikeStore.Models.Order>
@{ Layout="~/Views/Shared/_Layout.cshtml"; ViewData["Title"]="Đơn hàng của tôi"; }

<div class="container py-5">
  <h3 class="mb-4"><i class="fas fa-receipt me-2"></i>Đơn hàng của tôi</h3>
  
  @if(!Model.Any())
  {
    <div class="card text-center py-5">
      <div class="card-body">
        <i class="fas fa-shopping-bag" style="font-size:5rem;opacity:0.2"></i>
        <h5 class="mt-3">Bạn chưa có đơn hàng nào</h5>
        <p class="text-muted">Hãy khám phá và mua sắm ngay!</p>
        <a href="/" class="btn btn-primary mt-3">Mua sắm ngay</a>
      </div>
    </div>
  }
  else
  {
    @foreach(var order in Model)
    {
      <div class="card mb-3">
        <div class="card-header bg-white">
          <div class="row align-items-center">
            <div class="col-md-3">
              <strong>Đơn hàng #@order.OrderCode</strong><br>
<small class="text-muted">@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</small><br>
<small class="text-muted">PTTT: @order.PaymentMethod</small>
            </div>
            <div class="col-md-3">
              <span class="badge bg-@(order.Status switch {
                "Pending" => "warning",
                "Confirmed" => "info",
                "Processing" => "primary",
                "Shipping" => "primary",
                "Delivered" => "success",
                "Cancelled" => "danger",
                _ => "secondary"
              }) fs-6">
                @(order.Status switch {
                  "Pending" => "Chờ xác nhận",
                  "Confirmed" => "Đã xác nhận",
                  "Processing" => "Đang xử lý",
                  "Shipping" => "Đang giao hàng",
                  "Delivered" => "Đã giao hàng",
                  "Cancelled" => "Đã hủy",
                  _ => order.Status
                })
              </span>
            </div>
            <div class="col-md-3 text-end">
              <strong class="text-danger">@order.Total.ToString("N0")₫</strong>
            </div>
            <div class="col-md-3 text-end">
              <a href="/Orders/Track?id=@order.OrderCode" class="btn btn-sm btn-outline-primary">
                <i class="fas fa-eye me-1"></i>Chi tiết
              </a>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="row g-2">
            @foreach(var detail in order.Details.Take(3))
            {
              <div class="col-md-4">
                <div class="d-flex">
                  <img src="@detail.Product.ImageUrl" style="width:60px;height:60px;object-fit:contain" class="me-2" />
                  <div>
                    <small class="fw-bold">@detail.Product.Name</small><br>
                    <small class="text-muted">SL: @detail.Quantity | @detail.UnitPrice.ToString("N0")₫</small>
                  </div>
                </div>
              </div>
            }
            @if(order.Details.Count > 3)
            {
              <div class="col-md-4 d-flex align-items-center">
                <small class="text-muted">Và @(order.Details.Count - 3) sản phẩm khác...</small>
              </div>
            }
          </div>
        </div>
      </div>
    }
  }
</div>